
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class='share-item'>
    <input placeholder='输入标题' placeholder-style="color:#f6f6f6;" bindinput="bindKeyInput" name="title"></input>
  </view>
  <view class='share-radio'>
    <radio-group>
      <radio value="分享" checked='true'>分享</radio>
      <radio value="问答">问答</radio>
      <radio value="招聘">招聘</radio>
    </radio-group>
  </view>
  <view class="container">
    <scroll-view class="intro-box" scroll-y="true">      
      <view class="intro-live">
        <!-- 引入模板 -->
        <import src="../wxParse/wxParse.wxml"/>
        <!-- 这里data中article为bindName -->
        <template is="wxParse" data="{{wxParseData:article.nodes}}"/>
      </view>
    </scroll-view>
  </view>
</form>