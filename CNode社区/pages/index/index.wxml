<!--index.wxml-->
<template name="Header">
    <view class="top-bar">
      <view class="swiper-tab">
<view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">Tab1</view>
<view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">Tab2</view>
<view class="tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">Tab3</view>
<view class="tab-item {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">Tab4</view>
</view>
    </view>
</template>

<view class="page me">
    <view class="userinfo">
      <image class="userinfo-avatar" src="http://localhost:1026{{userInfo.avatar_url}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
       <template is="Header" data="{{ Headerlist, activeIndex }}"/>
    </view>
    <navigator url="/pages/login/login" wx:if="{{islogin == false}}">
      <view class="view-cell view-cell-line">
        <view class="view-cell-primary">
          <image class="view-img"   mode="scaleToFill" src="/images/icon/login.png" />
          <text class="view-name">登录cnode</text>
        </view>
        <view class="view-cell-arrow"></view>
      </view>
    </navigator>
    <view class="view-cell view-cell-line"  wx:if="{{islogin == true}}">
      <view class="view-cell-primary">
        <image class="view-img"  mode="scaleToFill" src="/images/icon/login.png" />
        <text class="view-name">已登录cnode</text>
      </view>
    </view>
    
    <swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange">
<swiper-item>
<view>我是tab1</view>
</swiper-item>

<swiper-item>
<view>我是tab2</view>
</swiper-item>
<swiper-item>
<view>我是tab3</view>
</swiper-item>
<swiper-item>
<view>我是tab4</view>
</swiper-item>
</swiper>
</view>
